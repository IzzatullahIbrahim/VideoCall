<!DOCTYPE html>
<html>
    <head>
        <title>Video Call</title>
        <link href="~/css/videoCall.css" rel="stylesheet" />
    </head>

    <body>
            <div class="make-center">
                <input type="text" id="room-id" value="abcdef">
                <button id="open-or-join-room">Enter room</button>


                <br><br>

                <input type="text" id="input-text-chat" placeholder="Enter Text Chat" disabled>
                <button id="share-file" disabled>Share File</button>
                <br><br>

                <button id="btn-leave-room" disabled>Leave /or close the room</button>

                <br><br>
                <button id="open-room" class="button-nothing"> </button>
                <button id="join-room" class="button-nothing"> </button>

                <div id="room-urls" style="text-align: center;display: none;background: #F1EDED;margin: 15px -10px;border: 1px solid rgb(189, 189, 189);border-left: 0;border-right: 0;"></div>
            </div>

            <div id="chat-container">
                <div id="file-container"></div>
                <div class="chat-output"></div>
            </div>

            <div id="videos-container"></div>

        <script src="https://rtcmulticonnection.herokuapp.com/dist/RTCMultiConnection.min.js"></script>
        <script src="https://rtcmulticonnection.herokuapp.com/socket.io/socket.io.js"></script>

        <!-- Script for video call -->
        <script src="~/ngApp/videoCall.js"></Script>

        <!-- custom layout for HTML5 audio/video elements -->
        <script src="https://cdn.webrtc-experiment.com/getMediaElement.js"></script>
    </body>

</html>